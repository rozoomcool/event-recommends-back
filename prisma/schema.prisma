generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role
  // profile          Profile?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Activity {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  tags        Tag[]        @relation("EntertainmentTags")
}

model Tag {
  name           String           @id
  entertainments Activity[] @relation("EntertainmentTags")
}

enum Role {
  ADMIN
  MODERATOR
  TEACHER
  STUDENT
}
